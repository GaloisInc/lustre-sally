(define-state-type
   S
   (
     (Lt Bool)
     (in1 Int)
     (in2 Int)
     (ok Bool)
     (out Int)
     (|gal-initializing| Bool))
   (
     (in1 Int)
     (in2 Int)
     (out Int)))
(define-transition-system
   TS
   S
   (= |gal-initializing| true)
   (and
      (= next.|gal-initializing| false)
      (= next.in1 input.in1)
      (= next.in2 input.in2)
      (= next.out input.out)
      next.Lt
      (=
         next.ok
         (and
            (< next.in1 next.out)
            (< next.out next.in2)))
      (=
         next.Lt
         (< next.in1 next.in2))))

(query
   TS
   (or |gal-initializing| ok))

